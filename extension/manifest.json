{
  "manifest_version": 2,
  "name": "Floobits Enterprise Screen Sharing",
  "description": "Share your screen in Floobits Enterprise. Due to restrictions in Chrome extension permissions, this secondary plugin is needed for Floobits Enterprise users.",
  "version": "1.0.0",
  "minimum_chrome_version": "38",
  "icons": {
    "16": "images/icon_16x16.png",
    "64": "images/icon_64x64.png"
  },
  "permissions": [
    "desktopCapture",
    "https://*.floobits.com/*",
    "https://*.floobits-enterprise.com/*",
    "https://*.floobits.bats.com/*",
    "https://*.floobits.louis.de/*",
    "https://*.ship.software/*",
    "https://*.fixtheco.de/*"
  ],
  "externally_connectable": {
    "ids": "*",
    "matches": [
      "https://*.floobits.com/*",
      "https://*.floobits-enterprise.com/*",
      "https://*.floobits.bats.com/*",
      "https://*.floobits.louis.de/*",
      "https://*.ship.software/*",
      "https://*.fixtheco.de/*"
    ]
  },
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.floobits.com/*",
        "https://*.floobits-enterprise.com/*",
        "https://*.floobits.bats.com/*",
        "https://*.floobits.louis.de/*",
        "https://*.ship.software/*",
        "https://*.fixtheco.de/*"
      ],
      "js": ["content_script.js"]
    }
  ]
}
